# Permitir acceso a archivos de imagen
<Files "*">
    Order Allow,Deny
    Allow from all
</Files>

# Permitir tipos de archivo de imagen
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevenir ejecuci칩n de scripts
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Headers para cacheo de im치genes
<IfModule mod_headers.c>
    Header set Cache-Control "max-age=2592000, public"
</IfModule>

# Habilitar compresi칩n para im치genes
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>
