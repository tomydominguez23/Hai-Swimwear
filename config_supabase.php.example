// Configuración de Supabase
// Obtén estos valores desde tu proyecto en Supabase: Settings > Database

// Host de tu base de datos Supabase
// Formato: db.xxxxxxxxxxxxx.supabase.co
define('SUPABASE_HOST', 'db.xxxxxxxxxxxxx.supabase.co');

// Nombre de la base de datos (generalmente es 'postgres')
define('SUPABASE_DB', 'postgres');

// Usuario de la base de datos (generalmente es 'postgres')
define('SUPABASE_USER', 'postgres');

// Contraseña de tu base de datos Supabase
// IMPORTANTE: Esta es la contraseña que configuraste al crear el proyecto
define('SUPABASE_PASS', 'tu_contraseña_aqui');

// Puerto (generalmente es 5432)
define('SUPABASE_PORT', '5432');

